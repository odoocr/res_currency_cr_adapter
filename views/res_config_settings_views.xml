<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_settings" model="ir.ui.view">
        <field name="name">BCCR settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>
                <group string="Indicadores BCCR" name="res_currency_rate_management">
                    <label for="bccr_indicador_compra"/>
                    <div>
                        <field name="bccr_indicador_compra" class="oe_inline"/>
                    </div>
                    <label for="bccr_indicador_venta"/>
                    <div>
                        <field name="bccr_indicador_venta" class="oe_inline"/>
                    </div>
                    <label for="bccr_usuario"/>
                    <div>
                        <field name="bccr_usuario" class="oe_inline"/>
                    </div>

                    <label for="bccr_token"/>
                    <div>
                        <field name="bccr_token" class="oe_inline"/>
                    </div>
                
                    
                </group>
            </form>
        </field>
    </record>

    <record id="action_config_settings" model="ir.actions.act_window">
        <field name="name">Configure BCCR</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem 
        id="menu_bccr_general_settings" 
        name="ConfiguraciÃ³n BCCR" 
        parent="account.menu_finance_configuration"
        sequence="0" 
        action="action_config_settings" 
        groups="base.group_system"
       />
        
</odoo>
